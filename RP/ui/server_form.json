{
	"namespace": "server_form",

	"main_screen_content": {
		"type": "panel",
		"size": ["100%", "100%"],
		"controls": [
			{
				"server_form_factory": {
					"type": "factory",
					"control_ids": {
						"long_form": "@server_form.long_form",
						"custom_form": "@server_form.custom_form"
					}
				}
			}
		]
  },

	"long_form": {
		"type": "panel",
		"size": ["100%", "100%"],
		"controls": [
			{
				"long_form@common_dialogs.main_panel_no_buttons": {
					"$title_panel": "common_dialogs.standard_title_label",
					"$title_size": [ "100% - 14px", 10 ],
					"size": [225, 200],
					"$text_name": "#title_text",
					"$title_text_binding_type": "none",
					"$child_control": "server_form.long_form_panel",
					"layer": 2,
					"bindings": [
						{ "binding_name": "#form_title" },
						{
							"binding_type": "view",
							"source_property_name": "(#title_text = #title_text - 'Celestial Panel')",
							"target_property_name": "#visible"
						}
					]
				}
			},
			{
				"celestial_panel@cosmos.celestial_panel_background": {
					"controls": [{"content@cosmos.celestial_panel_content":{}}],
					"bindings": [
						{ "binding_name": "#form_title" },
						{
							"binding_type": "view",
							"source_property_name": "( not (#title_text = #title_text - 'Celestial Panel'))",
							"target_property_name": "#visible"
						}
					]
				}
			}
		]
	}
}
